<Keyboard>
  <Name>Minecraft\nBedrock</Name>
  <SymbolMargin>10</SymbolMargin>
  <BackgroundColor>Transparent</BackgroundColor>
  <Height>100%</Height>
  <Width>100%</Width>
  <Position>Bottom</Position>
  <BackgroundColor>Transparent</BackgroundColor>
  <BorderColor>Transparent</BorderColor>
  <Grid>
    <Rows>7</Rows>
    <Cols>9</Cols>
  </Grid>
  <KeyGroup BackgroundColor="black" CompletionTimes="50%" KeyDownOpacity="1" LockOnTime="25" Name="QuickKey" Opacity=".9"/>
  <KeyGroup AutoScaleToOneKeyHeight="false" AutoScaleToOneKeyWidth="false" Name="Scaling"/>
  <Content>
    <DynamicKey Row="0" Col="0">
      <Label>Move</Label>
      <Action>LeftJoystick</Action>
    </DynamicKey>
    <DynamicKey Row="0" Col="1">
      <Label>Careful\nwalk</Label>
      <Action Payload="1.1, 1.5">LegacyJoystick</Action>
    </DynamicKey>
    <DynamicKey Row="0" Col="2">
      <Label>Look</Label>
      <Action Payload="1.1, 1.5">RightJoystick</Action>
    </DynamicKey>
    <DynamicKey Row="0" Col="6">
      <Label>Walk</Label>
      <KeyToggle PauseWhenLookingAtAnyKey="true">w</KeyToggle>
    </DynamicKey>
    <DynamicKey Row="1" Col="0">
      <Label>Legacy\nwalk</Label>
      <Action Payload="1.2, 15.0">LegacyJoystick</Action>
    </DynamicKey>
    <DynamicKey Row="0" Col="7">
      <Label>Fly</Label>
      <KeyDown>Space</KeyDown>
      <Wait>100</Wait>
      <KeyUp>Space</KeyUp>
      <Wait>100</Wait>
      <KeyDown>Space</KeyDown>
      <Wait>100</Wait>
      <KeyUp>Space</KeyUp>
    </DynamicKey>
    <DynamicKey Row="0" Col="8">
      <Label>Fly\ndown</Label>
      <KeyToggle PauseWhenLookingAtThisKey="true">Shift</KeyToggle>
     </DynamicKey>
    <DynamicKey Row="6" Col="0">
      <KeyGroup>QuickKey</KeyGroup>
      <Label>Items</Label>
      <ChangeKeyboard BackReturnsHere="False">MinecraftBedrockItems</ChangeKeyboard>
    </DynamicKey>
    <DynamicKey Row="6" Col="1">
      <Label>Swim/\nFly up</Label>      
      <KeyToggle PauseWhenLookingAtThisKey="true">Space</KeyToggle>
    </DynamicKey>
    <DynamicKey Row="6" Col="2">
      <Label>Place x1</Label>      
      <Action>MouseRightClick</Action>
    </DynamicKey>
    <DynamicKey Row="6" Col="6">
      <Label>Mine x1</Label>
      <Action>MouseLeftClick</Action>      
    </DynamicKey>
    <DynamicKey Row="6" Col="7">
      <Label>Toggle\nMine</Label>
      <Loop Count="0">
        <Action>MouseLeftClick</Action>      
        <Wait>500</Wait>
      </Loop>
    </DynamicKey>
    <DynamicKey Row="6" Col="8" >
      <Symbol>BackIcon</Symbol>
      <Action>BackFromKeyboard</Action>
    </DynamicKey>
  </Content>
</Keyboard>